{
    "name": "fruits-detection",
    "description": "This is a Cytomine app for detecting fruits on paintings",
    "command-line": "python app.py --cytomine_host [CYTOMINE_HOST] --cytomine_public_key [CYTOMINE_PUBLIC_KEY] --cytomine_private_key [CYTOMINE_PRIVATE_KEY] --cytomine_id_project [CYTOMINE_ID_PROJECT] --cytomine_id_software [CYTOMINE_ID_SOFTWARE] --image [IMAGE]",
    "container-image": {
            "type": "singularity",
            "image": "ylebarbier/s_fruits-detection"
    },
    "inputs": [
        {
            "id": "image",
            "name": "Image ID",
            "description": "The id of the image in Cytomine",
            "type": "String",
            "optional": "false",
            "default-value": "153949239",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_host",
            "name": "Cytomine host",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_public_key",
            "name": "Cytomine public key",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_private_key",
            "name": "Cytomine private key",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_id_project",
            "name": "Cytomine project ID",
            "set-by-server": true,
            "optional": false,
            "type": "Number",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_id_software",
            "name": "Cytomine software ID",
            "set-by-server": true,
            "optional": false,
            "type": "Number",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        }
    ],
    "schema-version": "cytomine-0.1"
}